<UserControl x:Class="BDM.App.UniversalApp.Content.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:BDM.App.UniversalApp.Content"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:notifications="using:BDM.App.UniversalApp.Controls.UINotifications"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <UserControl.Resources>
        
        
        <Style x:Key="MenuItemButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointedOver" />
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="ButtonBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource BDM_Light_Blue}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentContainer">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Black"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Duration="0"
                                                             To="0.98"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
                                                             Storyboard.TargetName="ContentContainer"/>
                                            <DoubleAnimation Duration="0"
                                                             To="0.98"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                                             Storyboard.TargetName="ContentContainer"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="ButtonBackground"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="0"
                                    Margin="0">
                                <ContentPresenter x:Name="ContentContainer"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                Content="{TemplateBinding Content}"
                                                Foreground="{TemplateBinding Foreground}"
                                                Background="{TemplateBinding Background}"
                                                HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                Padding="{TemplateBinding Padding}"
                                                Margin="0"
                                                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                                RenderTransformOrigin="0.5,0.5">

                                    <ContentPresenter.RenderTransform>
                                        <CompositeTransform />
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootSplitView.DisplayMode"
                                Value="CompactInline" />
                        <Setter Target="RootSplitView.IsPaneOpen"
                                Value="True" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootSplitView.DisplayMode"
                                Value="CompactOverlay" />
                        <Setter Target="RootSplitView.IsPaneOpen"
                                Value="False" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <SplitView x:Name="RootSplitView"
                   DisplayMode="Inline"
                   OpenPaneLength="250"
                   IsTabStop="False">
            <SplitView.Pane>
                <RelativePanel Background="White">
                    <Button x:Name="HeaderButton"
                            Click="OnHeaderClicked"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True"
                            Background="{StaticResource BDM_Blue}"
                            Foreground="White"
                            Padding="6">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE700;"
                                      FontFamily="Segoe MDL2 Assets"
                                      Margin="4,0,16,0" />
                            <TextBlock Text="Blagues de Merde" />
                        </StackPanel>
                    </Button>
                    <ItemsControl x:Name="MenuItemsList"
                                  ItemsSource="{x:Bind Path=MenuItems}"
                                  RelativePanel.Below="HeaderButton"
                                  RelativePanel.AlignLeftWithPanel="True"
                                  RelativePanel.AlignRightWithPanel="True"
                                  Background="{StaticResource BDM_Blue}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="local:NavigationMenuItem">
                                <Button Click="OnMenuItemClicked"
                                        Style="{StaticResource MenuItemButtonStyle}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Foreground="White"
                                        Background="{StaticResource BDM_Blue}"
                                        Padding="6">
                                    <Button.Content>
                                        <RelativePanel>
                                            <FontIcon x:Name="Icon"
                                                  Glyph="{x:Bind Path=Icon}"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  Margin="4,0,16,0" />
                                            <TextBlock x:Name="Label"
                                                   Text="{x:Bind Path=Label}"
                                                   RelativePanel.RightOf="Icon" />
                                        </RelativePanel>
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </RelativePanel>
            </SplitView.Pane>
            <Frame x:Name="NavigationFrame" />
        </SplitView>

        <ItemsControl x:Name="ToastContainer">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <notifications:UINotificationUserControl />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
